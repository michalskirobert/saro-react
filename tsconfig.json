{
    "compilerOptions": {
      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "../../built/local/tsc.js",
      "sourceMap": true,
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "@actions/*": ["src/utils/actions/*"],
        "@constants*": ["src/utils/constants/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
    }